<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Title - Will be changed dynamically -->
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/dialog_title_rate_exchange"
            android:textColor="#18286B"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Rating Bar - Visibility/Indicator state changed dynamically -->
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="1"
            android:theme="@style/CustomRatingBar" />

        <!-- Switch to toggle between Rating and Reporting -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_file_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/label_file_report"
            android:textColor="#18286B" />

        <!-- Section for Positive Feedback Tags -->
        <LinearLayout
            android:id="@+id/layout_positive_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"> <!-- Visible by default -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select positive feedback (optional):"
                android:textColor="#18286B" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="4dp"
                app:chipSpacing="8dp"
                app:singleSelection="false" />
        </LinearLayout>

        <!-- Section for Reporting - Initially GONE -->
        <LinearLayout
            android:id="@+id/layout_report_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"> <!-- Initially Hidden -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select reason(s) for report:"
                android:textColor="#18286B" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_report_reasons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="4dp"
                app:chipSpacing="8dp"
                app:singleSelection="false" />

            <EditText
                android:id="@+id/et_report_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="top"
                android:hint="@string/hint_report_description"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#888888" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_submit_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#6A5ACD"
            android:paddingHorizontal="24dp"
            android:text="@string/submit_rating"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>



<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChangePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/RL_email"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:background="@color/white"

            android:padding="@dimen/padding_medium">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView_Back"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/back_button"
                    android:src="@drawable/arrow_back"

                    app:tint="@color/dark_blue"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/textView_change_password_head"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="You can change your password now. Please enter password and verify before continuing"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:paddingStart="@dimen/padding_small"
                    android:paddingEnd="@dimen/padding_small"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_change_password_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout1"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Current Password"
                android:textColor="#555555"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/editText_change_password_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_change_password_current"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/border"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/text_size_medium" />

            <Button
                android:id="@+id/button_change_password_authenticate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_below="@id/editText_change_password_current"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:backgroundTint="@color/dark_blue"
                android:text="Authenticate" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:elevation="10dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_large"
            android:padding="@dimen/padding_medium"
            android:layout_marginBottom="@dimen/margin_medium">

            <TextView
                android:id="@+id/textView_change_password_authenticated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your profile is not authenticated/verified yet"
                android:textColor="#555555"
                android:textSize="@dimen/text_size_medium"/>

            <TextView
                android:id="@+id/textView_change_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_change_password_authenticated"
                android:layout_marginTop="@dimen/margin_large"
                android:text="New Password"
                android:textColor="#555555"
                android:textSize="@dimen/text_size_medium"/>

            <EditText
                android:id="@+id/editText_change_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_change_password_new"
                android:layout_marginTop="@dimen/margin_small"
                android:hint="Enter your new password"
                android:inputType="textPassword"
                android:padding="@dimen/padding_small"
                android:background="@drawable/border"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/textView_change_password_new_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_change_password_new"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Confirm Password"
                android:textColor="#555555"
                android:textSize="@dimen/text_size_medium"/>

            <EditText
                android:id="@+id/editText_change_password_new_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_change_password_new_confirm"
                android:layout_marginTop="@dimen/margin_small"
                android:hint="Confirm your new password"
                android:inputType="textPassword"
                android:padding="@dimen/padding_small"
                android:background="@drawable/border"
                android:textSize="@dimen/text_size_medium" />

            <Button
                android:id="@+id/button_change_password"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_below="@id/editText_change_password_new_confirm"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:backgroundTint="@color/dark_blue"
                android:text="Change Password" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>

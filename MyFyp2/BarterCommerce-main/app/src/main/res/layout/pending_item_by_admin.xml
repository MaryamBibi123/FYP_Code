<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_product_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/item_product_card_radius"
    app:cardElevation="@dimen/item_product_card_elevation">


<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">

        <FrameLayout
            android:id="@+id/Frame_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_rectangle_primary"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/product_image_desc"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:text="@string/product_name_text"
            android:textColor="@color/Blue1"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:padding="@dimen/space_small"
            app:layout_constraintTop_toBottomOf="@id/Frame_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- LinearLayout for Admin Action Buttons -->
        <LinearLayout
            android:id="@+id/admin_action_buttons_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

            <Button
                android:id="@+id/btn_admin_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textSize="@dimen/_10sdp"
                android:backgroundTint="@color/dark_green"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/_8sdp"

                android:layout_marginEnd="@dimen/_4sdp"/>

            <Button
                android:id="@+id/btn_admin_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textSize="@dimen/_10sdp"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_4sdp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F8F5"
    android:padding="16dp"
    tools:context=".ProfileFragment">

    <!-- Profile Picture -->
<!--    <ImageView-->
<!--        android:id="@+id/profileImage"-->
<!--        android:layout_width="@dimen/_200sdp"-->
<!--        android:layout_height="@dimen/_200sdp"-->

<!--        android:background="@drawable/circle_border"-->
<!--        android:contentDescription="Profile Image"-->
<!--        android:padding="@dimen/_20sdp"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:src="@drawable/ic_profile"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent" />-->

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/circle_border"
        android:contentDescription="Profile Image"
        android:padding="@dimen/_20sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <ImageView
        android:id="@+id/editProfileIcon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/icons8pencil24"
        android:background="@drawable/circular_border"
        android:padding="@dimen/_5sdp"
        android:contentDescription="Edit Profile Image"
        android:elevation="2dp"
        app:layout_constraintCircle="@id/profileImage"
        app:layout_constraintCircleRadius="@dimen/_100sdp"
        app:layout_constraintCircleAngle="45"
        app:tint="@color/dark_green"
        tools:ignore="MissingConstraints" />


    <!-- Username -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Your Name"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Stats Section -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/exchangeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0\nExchanges"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/ratingCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0\nRating"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>

    <!-- Rating Bar -->
    <RatingBar
        android:id="@+id/userRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"

        android:isIndicator="true"
        android:numStars="5"
        android:rating="4.5"
        android:stepSize="0.5"
        android:theme="@style/YellowRatingBar"
        app:layout_constraintTop_toBottomOf="@id/statsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons Section -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/userRatingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/BidsButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:backgroundTint="#08567C"
            android:textSize="@dimen/_12sdp"
            android:text="Bids"
            android:textColor="@color/light_brown" />

        <Button
            android:id="@+id/barterBuzz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:backgroundTint="#08567C"
            android:textSize="@dimen/_12sdp"
            android:text="BarterBuzz"
            android:textColor="@color/light_brown" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>








<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:backgroundTint="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/pollQuestionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Which of these items would you never trade?"
            android:textColor="#18286B"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <!-- Badge (for highlighting the poll uploaded by the current user) -->
        <TextView
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Poll"

            android:textColor="#FFFFFF"
            android:background="@drawable/badge_background"
        android:padding="4dp"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-8dp"/>

        <!-- RadioGroup for selectable options -->
        <RadioGroup
            android:id="@+id/optionsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/pollQuestionText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/option1RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:textColor="#6A5ACD"
                android:textStyle="bold"
              />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/option1ProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:progress="50"
                    android:progressTint="#6A5ACD"
                    android:progressBackgroundTint="#D8D8E2"
                    android:max="100"
                    android:minHeight="24dp"/>

                <TextView
                    android:id="@+id/option1Percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="56%"
                    android:textColor="#18286B"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <RadioButton
                android:id="@+id/option2RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:textColor="#6A5ACD"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
             />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/option2ProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:progress="50"
                    android:progressTint="#6A5ACD"
                    android:progressBackgroundTint="#D8D8E2"
                    android:max="100"
                    android:minHeight="24dp"/>

                <TextView
                    android:id="@+id/option2Percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="56%"
                    android:textColor="#18286B"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <RadioButton
                android:id="@+id/option3RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:textColor="#6A5ACD"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/option3ProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:progress="50"
                    android:progressTint="#6A5ACD"
                    android:progressBackgroundTint="#D8D8E2"
                    android:max="100"
                    android:minHeight="24dp"/>

                <TextView
                    android:id="@+id/option3Percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="56%"
                    android:textColor="#18286B"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </RadioGroup>

        <TextView
            android:id="@+id/pollFooterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="96 votes â€¢ 12 hours left"
            android:textColor="#6A5ACD"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/optionsGroup"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>




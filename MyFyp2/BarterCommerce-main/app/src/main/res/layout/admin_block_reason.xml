<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog">

    <TextView
        android:id="@+id/tv_admin_block_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason for Block"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#18286B"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select reason(s) or specify below:"
        android:textColor="#18286B"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_admin_block_reasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:chipSpacing="8dp"
        app:singleSelection="false"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_admin_block_reason_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Custom reason or details (mandatory if no chips selected)"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:gravity="top"
        android:padding="10dp"
        android:layout_marginBottom="24dp"/>

    <!-- Buttons for block duration will be added by the calling fragment/dialog builder -->

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Bid Item Image -->
        <ImageView
            android:id="@+id/bidImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:background="@drawable/image_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/bid_item_image" />

        <!-- Offer Text -->
        <TextView
            android:id="@+id/offerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/bidImage"
            app:layout_constraintTop_toTopOf="@+id/bidImage"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="AirPods Pro Gen 2 + â‚¹2000 cash" />

        <!-- User ID -->
        <TextView
            android:id="@+id/userIdText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="#555555"
            app:layout_constraintStart_toStartOf="@+id/offerText"
            app:layout_constraintTop_toBottomOf="@+id/offerText"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="by verylongusername123" />

        <!-- Total Points -->
        <TextView
            android:id="@+id/pointsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            app:layout_constraintStart_toStartOf="@+id/userIdText"
            app:layout_constraintTop_toBottomOf="@+id/userIdText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/bidImage"
            tools:text="Total Points: 58" />


        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@+id/bidImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <!-- Rating Buttons Layout -->
        <LinearLayout
            android:id="@+id/ratingButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/fairButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/fair_1_point"
                android:textSize="12sp"
                android:backgroundTint="#AEAEAE"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/goodButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/good_2_points"
                android:textSize="12sp"
                android:backgroundTint="#64B5F6"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/bestButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/best_3_points"
                android:textSize="12sp"
                android:backgroundTint="#81C784"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <!-- Rating Counts Display -->
        <LinearLayout
            android:id="@+id/ratingCountsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingButtonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/fairCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#555555"
                tools:text="Fair: 5"/>

            <TextView
                android:id="@+id/goodCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#555555"
                tools:text="Good: 12"/>

            <TextView
                android:id="@+id/bestCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#555555"
                tools:text="Best: 8"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
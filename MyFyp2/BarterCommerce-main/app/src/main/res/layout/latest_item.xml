<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/latest_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2EFF4"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F0F2FB"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Left: Image with badge -->
            <FrameLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/product_image_card_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Product Image"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/product_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="@dimen/spacing_small"
                    android:background="@drawable/background_condition_badge"
                    android:elevation="@dimen/item_product_condition_elevation"
                    android:paddingHorizontal="@dimen/spacing_small"
                    android:paddingBottom="@dimen/spacing_extra_small"
                    android:text="Good"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_extra_small" />

            </FrameLayout>

            <!-- Right: Name & Like -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_medium">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center|start"
                    android:maxLines="3"
                    android:text="Electric iron and oven"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <!--                add descriotion here-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center|start"
                    android:maxLines="2"
                    android:id="@+id/descriptionTitle"
                    android:text="Description"
                    android:textColor="@color/Blue1"
                    android:textSize="@dimen/text_size_extra_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/owner_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    app:drawableStartCompat="@drawable/ic_star"
                    tools:text="    4.5 (12)" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/chatBackBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back"
        android:layout_margin="10dp"
        android:background="@color/black"/>


    <!-- Title -->
    <TextView
        android:id="@+id/textView_login_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_title"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="#000000"
        android:textSize="@dimen/_40ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/textView_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_subtitle"
        android:fontFamily="sans-serif"
        android:text="Enter your email and password"
        android:textColor="#000000"
        android:layout_marginBottom="@dimen/margin_large"

        android:textSize="@dimen/text_size_subtitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_login_head" />

    <!-- Email EditText -->
    <EditText
        android:id="@+id/editText_login_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:background="@drawable/rounded_background"
        android:padding="@dimen/button_padding"
        android:layout_marginTop="@dimen/margin_top_input"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/textView_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="@dimen/input_width_percentage" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/editText_login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:background="@drawable/rounded_background"
        android:padding="@dimen/button_padding"
        android:layout_marginTop="@dimen/margin_top_input"
        android:textColorHint="@color/white"
        android:layout_marginBottom="@dimen/margin_bottom_input"
        app:layout_constraintTop_toBottomOf="@id/editText_login_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="@dimen/input_width_percentage" />

    <!-- Show/Hide Password Checkbox -->
    <CheckBox
        android:id="@+id/checkBoxShowHidePwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Password"
        android:textColor="#555555"
        android:textSize="@dimen/text_size_checkbox"
        app:layout_constraintTop_toBottomOf="@id/editText_login_password"
        app:layout_constraintStart_toStartOf="@id/editText_login_password"
        android:layout_marginTop="@dimen/margin_top_checkbox" />

    <!-- Forgot Password Button -->
    <Button
        android:id="@+id/button_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="@dimen/text_size_checkbox"
        android:textColor="#02380A"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/checkBoxShowHidePwd"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Login Button -->
    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:backgroundTint="#18286B"
        android:textColor="#FFFFFF"
        android:padding="@dimen/button_padding"
        app:layout_constraintTop_toBottomOf="@id/button_forgot_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="@dimen/button_width_percentage"
        android:layout_marginTop="@dimen/margin_top_button" />

    <!-- Continue with Google Button -->
<!--    <Button-->
<!--        android:id="@+id/googleSignup"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_marginVertical="@dimen/margin_vertical_google_button"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Continue with Google"-->
<!--        android:drawableLeft="@drawable/ic_google"-->
<!--        android:textColor="@color/white"-->
<!--        android:elevation="4dp"-->
<!--        android:paddingStart="@dimen/google_button_padding_start"-->
<!--        android:textColorHint="@color/white"-->
<!--        android:layout_gravity="center"-->
<!--        android:backgroundTint="#18286B"-->
<!--        app:layout_constraintTop_toBottomOf="@id/button_login"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintWidth_percent="@dimen/button_width_percentage" />-->

    <!-- ProgressBar (Hidden by default) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_marginTop="@dimen/progressbar_margin_top"
        app:layout_constraintTop_toBottomOf="@id/button_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>











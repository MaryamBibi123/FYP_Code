<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report ID: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_report_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="RP12345XYZ"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2023-10-27 10:30 AM"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_report_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Pending Review"
                android:textStyle="italic"
                android:textColor="@color/purple_500"/> <!-- Color can change based on status -->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reported User:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tv_reported_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="John Doe (UID: user123)"
            android:layout_marginBottom="8dp"
            android:textColor="@color/dark_gray"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporter:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tv_reporter_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jane Smith (UID: user456)"
            android:layout_marginBottom="8dp"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exchange/Bid ID:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tv_report_bid_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="BID78910"
            android:layout_marginBottom="8dp"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reasons:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_report_item_reasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="6dp"
            app:chipSpacingVertical="4dp"
            android:layout_marginBottom="8dp">
            <!-- Chips will be added programmatically -->
            <!-- Example: <com.google.android.material.chip.Chip android:text="Item Faulty"/> -->
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tv_report_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tv_report_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="The item received was broken and did not match the pictures shown in the listing. User was also rude."
            android:layout_marginBottom="12dp"
            android:textColor="@color/dark_gray"/>

        <!-- Actions for this report -->
        <LinearLayout
            android:id="@+id/layout_report_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_dismiss_report"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dismiss"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_take_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take Action"/> <!-- Navigates to UserProfileForAdmin to block/warn -->
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>